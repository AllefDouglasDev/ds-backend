// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id            Int        @id @default(autoincrement())
    name          String
    email         String     @unique
    password      String
    type          String // 'teacher' or 'student'
    class         Class?     @relation(fields: [classId], references: [id])
    classId       Int?
    studentDoubts Doubt[]    @relation("StudentDoubt")
    teacherDoubts Doubt[]    @relation("TeacherDoubt")
    UserTask      UserTask[]
    Doubt         Doubt[]
}

model Class {
    id       Int        @id @default(autoincrement())
    name     String
    users    User[]
    tasks    Task[]
    Schedule Schedule[]
}

model Task {
    id          Int        @id @default(autoincrement())
    classId     Int
    classroom   Class      @relation(fields: [classId], references: [id])
    title       String
    description String
    deadline    DateTime
    UserTask    UserTask[]
    Doubt       Doubt[]
}

model UserTask {
    id          Int      @id @default(autoincrement())
    userId      Int
    user        User     @relation(fields: [userId], references: [id])
    taskId      Int
    task        Task     @relation(fields: [taskId], references: [id])
    deliveredAt DateTime
    content     String
}

model Doubt {
    id        Int       @id @default(autoincrement())
    taskId    Int
    task      Task      @relation(fields: [taskId], references: [id])
    student   User?     @relation("StudentDoubt", fields: [studentId], references: [id])
    studentId Int?
    teacher   User?     @relation("TeacherDoubt", fields: [teacherId], references: [id])
    teacherId Int?
    message   String
    type      String
    User      User?     @relation(fields: [userId], references: [id])
    userId    Int?
    createdAt DateTime? @default(now())
}

model Event {
    id    Int       @id @default(autoincrement())
    title String
    start DateTime
    end   DateTime?
}

model Schedule {
    id        Int    @id @default(autoincrement())
    classId   Int
    classroom Class  @relation(fields: [classId], references: [id])
    day       String
    time      String
    subject   String
}
